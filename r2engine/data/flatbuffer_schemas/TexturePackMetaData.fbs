namespace flat;

file_identifier "tmet";
file_extension "tmet";

enum TextureType: byte
{
	TEXTURE = 0,
	CUBEMAP
}

enum CubemapSide: byte
{
	RIGHT = 0,
	LEFT,
	TOP,
	BOTTOM,
	FRONT,
	BACK,
	NUM_SIDES
}

enum MipMapFilter: byte
{
	BOX = 0,
	TRIANGLE,
	KAISER
}

enum TextureProcessType: byte
{
	NONE = 0,
	CONVOLVED,
	PREFILTER,
	LUT_DFG,
	LUT
}

table CubemapSideEntry
{
	textureName:string;
	side:CubemapSide;
}

table MipLevel
{
	level:uint;
	sides:[CubemapSideEntry];
}

table TexturePackMetaData
{
	type:TextureType;
	mipLevels:[MipLevel];
	desiredMipLevels:uint;
	mipMapFilter:MipMapFilter;
	textureProcessType:TextureProcessType;
}

root_type TexturePackMetaData;