namespace flat;

file_identifier "mesh";
file_extension "mesh";

struct Vertex3
{
	x:float;
	y:float;
	z:float;
}

struct Vertex2
{
	x:float;
	y:float;
}

table Face
{
	numIndices:ulong;
	indices:[uint];
}

table Mesh
{
	name:ulong (hash:"fnv1a_64");
	numVertices:ulong;
	numFaces:ulong;
	positions:[Vertex3];
	normals:[Vertex3];
	textureCoords:[Vertex2];
	faces:[Face];
}

root_type Mesh;