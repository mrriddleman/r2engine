
include "TexturePackMetaData.fbs";
include "TextureMetaData.fbs";

namespace flat;

file_identifier "tman";
file_extension "tman";


table TexturePack
{
	packName:ulong (hash:"fnv1a_64");
	albedo:[string];
	normal:[string];
	emissive:[string];
	metallic:[string];
	occlusion:[string];
	roughness:[string];	
	height:[string];
	anisotropy:[string];
	detail:[string];
	clearCoat:[string];
	clearCoatRoughness:[string];
	clearCoatNormal:[string];
	packSize:ulong;
	totalNumberOfTextures:ulong;
	metaData:TexturePackMetaData;
}

table FormatMetaData
{
	format:TextureFormat;
	maxWidth:uint;
	maxHeight:uint;
	numTextures:uint;
	maxMips:uint;
	isCubemap:bool;
	isAnisotropic:bool;
}

table TexturePacksManifest
{
	texturePacks:[TexturePack];
	totalNumberOfTextures:ulong;
	totalTextureSize:ulong;	
	maxTexturesInAPack:ulong;
	formatMetaData:[FormatMetaData];
}

root_type TexturePacksManifest;